    "conexus": {
      "type": "local",
      "command": [
        "bunx",
        "@agentic-conexus/mcp"
      ],
      "environment": {
        "CONEXUS_DB_PATH": "/Users/johnferguson/Github/conexus/data/conexus.db",
        "CONEXUS_ROOT_PATH": "/Users/johnferguson/Github/conexus",
        "CONEXUS_LOG_LEVEL": "info"
      },
      "enabled": true
    }
