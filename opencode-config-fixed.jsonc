      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@felixallistar/coolify-mcp",
        "--server"
      ],
      "environment": {
        "COOLIFY_API_URL": "https://coolify.fergify.work",
        "COOLIFY_ACCESS_TOKEN": "***REMOVED_FOR_SECURITY***",
        "COOLIFY_API_TOKEN": "***REMOVED_FOR_SECURITY***",
        "COOLIFY_BASE_URL": "https://coolify.fergify.work"
      },
      "enabled": true
    },
    "Playwright": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "environment": {},
      "enabled": true
    },
    "Context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-b9edf875-c47d-46a3-b15d-d240714fdd0ei"
      },
      "enabled": true
    },
    "Socket": {
      "type": "local",
      "command": [
        "bunx",
        "@socketsecurity/mcp@latest"
      ],
      "environment": {
        "SOCKET_API_KEY": "sktsec_IfAg2PXg4KQ0pbnwTPLs9RmeUQSFOARzTHSvAJe66S5z_api"
      },
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "chrome-devtools-mcp@latest",
        "--browserUrl=http://127.0.0.1:9222"
      ],
      "environment": {},
      "enabled": true
    },
    "sentry": {
      "type": "local",
      "command": [
        "npx",
        "@sentry/mcp-server@latest"
      ],
      "environment": {
        "SENTRY_ACCESS_TOKEN": "***REMOVED_FOR_SECURITY***",
        "SENTRY_HOST": "sentry.fergify.work",
        "ORGANIZATION": "unfergettable-designs"
